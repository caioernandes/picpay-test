<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <!--Removing actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
    </style>

    <style name="MatButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/textColorDescription</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorDescription</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Theme.MaterialComponents">
        <item name="android:textColorHint">@color/colorPlaceHolder</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Theme.MaterialComponents">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColorDescription</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>
    </style>

</resources>